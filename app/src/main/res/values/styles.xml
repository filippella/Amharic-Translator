<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/blue_find</item>
        <item name="colorControlHighlight">@color/selectedNavigationItem</item>

        <item name="android:actionMenuTextColor">@color/blue</item>

        <item name="android:spinnerDropDownItemStyle">@style/LanguageDropDownSpinnerStyle</item>
        <item name="android:dropDownListViewStyle">@style/App.Style.Spinner</item>
        <item name="toolbarStyle">@style/ToolBarStyle</item>
    </style>

    <style name="LanguageDropDownSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:animateLayoutChanges">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionBarPopupTheme">@style/Toolbar_Popup</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="popupTheme">@style/Toolbar_Popup</item>
    </style>

    <style name="Toolbar_Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:background">@color/purple</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/grey_light</item>
    </style>

    <style name="DrawerCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.Style.Spinner" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:dividerHeight">0.05dip</item>
        <item name="android:divider">@color/light_gray</item>
        <item name="overlapAnchor">false</item>
    </style>

</resources>
